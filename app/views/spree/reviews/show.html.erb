<div class="row">
  <div class="col-lg-9">
    <h1 class="h3">Customer Review</h1>
    <%= render 'spree/shared/review', review: @review %>
  </div>
  <div class="col-lg-3">
    <h3 class="h5">Product Details</h3>
    <div class="row">
      <div class="col-3">
        <% image = @product.images.first %>
        <%= lazy_image(
                  src: main_app.url_for(image.url(:pdp_thumbnail)),
                  class: 'd-block w-100',
                  alt: image.alt || @product.name,
                  width: 57,
                  height: 70) %>
      </div>
      <div class="col-9">
        <div class="p-t mb-2">
          <%= link_to @product .title, spree.product_path(@product )%>
        </div>
      </div>
    </div>
    <%= render 'spree/shared/rating', product: @product %>
  </div>
</div>